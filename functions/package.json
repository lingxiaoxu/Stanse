{
  "name": "stanse-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Stanse subscription automation",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "delete-user": "npm run build && node lib/scripts/delete-auth-user.js"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^5.6.0",
    "@google-cloud/storage": "^7.18.0",
    "@google/genai": "^1.35.0",
    "@sendgrid/mail": "^8.1.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.2.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.13",
    "typescript": "^5.3.0"
  }
}
