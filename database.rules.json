{
  "rules": {
    "presence": {
      ".read": "auth != null",
      "$userId": {
        ".write": "$userId === auth.uid"
      }
    },
    "matchmaking_queue": {
      ".read": "auth != null",
      "$userId": {
        ".write": "$userId === auth.uid"
      }
    },
    "active_matches": {
      ".read": "auth != null",
      "$matchId": {
        ".write": "auth != null && (data.child('playerAId').val() === auth.uid || data.child('playerBId').val() === auth.uid || !data.exists())",
        "currentQuestionIndex": {
          ".read": "auth != null && (root.child('active_matches').child($matchId).child('playerAId').val() === auth.uid || root.child('active_matches').child($matchId).child('playerBId').val() === auth.uid)",
          ".write": "false"
        }
      }
    }
  }
}
